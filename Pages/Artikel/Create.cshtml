@page
@model LagerverwaltungApp.Pages.Artikel.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Artikel erstellen</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Artikel.Name" class="control-label"></label>
                <input asp-for="Artikel.Name" class="form-control" />
                <span asp-validation-for="Artikel.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Artikel.Beschreibung" class="control-label"></label>
                <input asp-for="Artikel.Beschreibung" class="form-control" />
                <span asp-validation-for="Artikel.Beschreibung" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Artikel.Bestand" class="control-label"></label>
                <input asp-for="Artikel.Bestand" class="form-control" />
                <span asp-validation-for="Artikel.Bestand" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Artikel.Preis" class="control-label"></label>
                <input asp-for="Artikel.Preis" class="form-control" />
                <span asp-validation-for="Artikel.Preis" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Artikel.KategorieId" class="control-label">Kategorie</label>
                <select asp-for="Artikel.KategorieId" class="form-control" asp-items="Model.KategorienListe">
                    <option value="">-- Bitte wählen --</option>
                </select>
                <span asp-validation-for="Artikel.KategorieId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Erstellen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-page="Index">Zurück zur Liste</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
