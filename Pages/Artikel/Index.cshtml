@page 
@using LagerverwaltungApp.Models

@model LagerverwaltungApp.Pages.Artikel.IndexModel
@{
    ViewData["Title"] = "Artikelübersicht";
}

<h2>Artikelübersicht</h2>

<p>
    <a asp-page="Create" class="btn btn-primary">Neuen Artikel erstellen</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Beschreibung</th>
            <th>Bestand</th>
            <th>Preis</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var artikel in Model.ArtikelListe)
        {
            <tr>
                <td>@artikel.Name</td>
                <td>@artikel.Beschreibung</td>
                <td>@artikel.Bestand</td>
                <td>@artikel.Preis €</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@artikel.Id">Bearbeiten</a> |
                    <a asp-page="Details" asp-route-id="@artikel.Id">Details</a> |
                    <a asp-page="Delete" asp-route-id="@artikel.Id">Löschen</a>
                </td>
            </tr>
        }
    </tbody>
</table>
