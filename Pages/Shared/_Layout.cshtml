<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LagerverwaltungApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LagerverwaltungApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">LagerverwaltungApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav flex-grow-1">

                        <!-- Home -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index">🏠 Home</a>
                        </li>

                        <!-- 📦 Lager Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="lagerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                📦 Lager
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="lagerDropdown">
                                <li><a class="dropdown-item" asp-page="/Artikel/Index">📦 Artikel</a></li>
                                <li><a class="dropdown-item" asp-page="/Bestellungen/Index">📋 Bestellungen</a></li>
                                <li><a class="dropdown-item" asp-page="/Warenausgaenge/Index">📤 Warenausgänge</a></li>
                                <li><a class="dropdown-item" asp-page="/LagerAbgang/Erstellen">➕ Neuer Abgang</a></li>
                                <li><a class="dropdown-item" asp-page="/LagerAbgang/Index">📤 Lagerabgänge Übersicht</a></li>
                            </ul>
                        </li>

                        <!-- 📊 Berichte Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="berichteDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                📊 Berichte
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="berichteDropdown">
                                <li><a class="dropdown-item" asp-page="/Berichte/TopAbgaenge">📈 Top 10 Abgänge</a></li>
                                <li><a class="dropdown-item" asp-page="/Berichte/AbgaengeNachGrund">📋 Abgänge nach Grund</a></li>
                                <li><a class="dropdown-item" asp-page="/Berichte/NiedrigerBestand">📉 Niedriger Bestand</a></li>
                                <li><a class="dropdown-item" asp-page="/Berichte/AbgaengeProBenutzer">👤 Nach Benutzer</a></li>
                                <li><a class="dropdown-item" asp-page="/Berichte/Verlauf">📦 Bestandsverlauf</a></li>
                                <li><a class="dropdown-item" asp-page="/Berichte/Export">📤 Exportieren</a></li>
                            </ul>
                        </li>

                        <!-- Datenschutz -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Privacy">🔒 Datenschutz</a>
                        </li>
                    </ul>

                    <!-- Login/Logout Partial -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - LagerverwaltungApp - <a asp-area="" asp-page="/Privacy">Datenschutz</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
