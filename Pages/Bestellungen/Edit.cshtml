@page "{id:int}"
@model LagerverwaltungApp.Pages.Bestellungen.EditModel
@{
    ViewData["Title"] = "Bestellung bearbeiten";
}

<h1>Bestellung bearbeiten</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Bestellung.ArtikelId" class="control-label"></label>
        <select asp-for="Bestellung.ArtikelId" asp-items="Model.ArtikelListe" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="Bestellung.Menge" class="control-label"></label>
        <input asp-for="Bestellung.Menge" class="form-control" />
        <span asp-validation-for="Bestellung.Menge" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Bestellung.Bestelldatum" class="control-label"></label>
        <input asp-for="Bestellung.Bestelldatum" type="date" class="form-control" />
    </div>

    <input type="hidden" asp-for="Bestellung.Id" />

    <button type="submit" class="btn btn-primary">Speichern</button>
    <a asp-page="./Index" class="btn btn-secondary">Zurück</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
